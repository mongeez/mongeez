<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
    
    <groupId>org.mongeez</groupId>
    <artifactId>mongeez-parent</artifactId>
    <version>0.9.2</version>
    <packaging>pom</packaging>

    <name>Mongeez</name>
	<description>An opensource project for mongodb change management</description>
	<url>https://github.com/secondmarket/mongeez</url>

	<modules>
		<module>mongeez</module>
		<module>ant-task</module>
<!-- 		<module>examples</module> -->
	</modules>

	<licenses>
		<license>
			<name>The Apache Software License, Version 2.0</name>
			<url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
			<distribution>repo</distribution>
		</license>
	</licenses>

	<scm>
        <connection>scm:git:http://rumba.ci.dev.pearsoncmg.com/gitblit/git/third-party/mongeez.git</connection>
        <developerConnection>scm:git:http://rumba.ci.dev.pearsoncmg.com/gitblit/git/third-party/mongeez.git</developerConnection>
        <url>http://rumba.ci.dev.pearsoncmg.com/gitblit/summary/?r=third-party/mongeez.git</url>
    </scm>


	<developers>
		<developer>
			<id>epishkin</id>
			<name>OLEKSII IEPISHKIN</name>
			<email>epishkin@gmail.com</email>
		</developer>
		<developer>
			<id>mlysaght</id>
			<name>Michael Lysaght</name>
			<email>mlysaght@secondmarket.com</email>
		</developer>
		<developer>
			<id>nlloyd</id>
			<name>Nick Lloyd</name>
			<email>nlloyd@gmail.com</email>
		</developer>
	</developers>

	<properties>
		<java.version>1.6</java.version>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>

	<dependencies>
		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
			<version>1.2.17</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.testng</groupId>
			<artifactId>testng</artifactId>
			<version>5.14.9</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.apache.commons</groupId>
			<artifactId>commons-lang3</artifactId>
			<version>3.1</version>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.5.1</version>
				<configuration>
					<source>${java.version}</source>
					<target>${java.version}</target>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-source-plugin</artifactId>
				<version>2.2.1</version>
				<executions>
					<execution>
						<id>attach-sources</id>
						<phase>verify</phase>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

			<!-- <plugin> <groupId>org.apache.maven.plugins</groupId> <artifactId>maven-gpg-plugin</artifactId> 
				<version>1.4</version> <executions> <execution> <id>sign-artifacts</id> <phase>verify</phase> 
				<goals> <goal>sign</goal> </goals> </execution> </executions> </plugin> -->
		</plugins>
	</build>

	<distributionManagement>
 	 	        <downloadUrl>http://rumba.ci.dev.pearsoncmg.com/nexus/content/repositories/internal/</downloadUrl>
	 	        <repository>
	 	            <id>rumba.release</id>
	 	            <name>RUMBA Release Repository</name>
	 	            <url>http://rumba.ci.dev.pearsoncmg.com/nexus/content/repositories/internal/</url>
	 	        </repository>
 	        <snapshotRepository>
	 	            <id>rumba.snapshots</id>
	 	            <name>RUMBA Snapshots Repository</name>
	 	            <url>http://rumba.ci.dev.pearsoncmg.com/nexus/content/repositories/snapshots/</url>
	    </snapshotRepository>
	</distributionManagement>
</project>
